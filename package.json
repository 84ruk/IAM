{
  "name": "iam-project",
  "version": "1.0.0",
  "description": "Sistema de GestiÃ³n de Inventario IAM",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd iam-backend && npm run start:dev",
    "dev:frontend": "cd iam-frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd iam-backend && npm run build",
    "build:frontend": "cd iam-frontend && npm run build",
    "install:all": "npm install && cd iam-backend && npm install && cd ../iam-frontend && npm install",
    "db:generate": "cd iam-backend && npx prisma generate",
    "db:migrate": "cd iam-backend && npx prisma migrate dev",
    "db:studio": "cd iam-backend && npx prisma studio",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd iam-backend && npm run lint",
    "lint:frontend": "cd iam-frontend && npm run lint"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.10.0",
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.7",
    "isomorphic-dompurify": "^2.26.0",
    "mjml": "^4.15.3",
    "nodemailer": "^7.0.5",
    "qrcode": "^1.5.4",
    "react-tooltip": "^5.29.1",
    "rechart": "^0.0.1",
    "recharts": "^2.15.3",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
