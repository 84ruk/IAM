# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN - REDIS
# ===========================================

# ===========================================
# CONFIGURACIÓN DE REDIS - OPCIÓN 1: UPSTASH (RECOMENDADO)
# ===========================================
# Upstash Redis - Plan gratuito: 10,000 requests/día
REDIS_URL=redis://default:password@us1-capable-rat-12345.upstash.io:12345

# ===========================================
# CONFIGURACIÓN DE REDIS - OPCIÓN 2: REDIS CLOUD
# ===========================================
# Redis Cloud - Plan gratuito: 30MB, 30 conexiones
# REDIS_HOST=redis-12345.c123.us-east-1-1.ec2.cloud.redislabs.com
# REDIS_PORT=12345
# REDIS_PASSWORD=tu_redis_password_aqui
# REDIS_DB=0

# ===========================================
# CONFIGURACIÓN DE REDIS - OPCIÓN 3: RAILWAY
# ===========================================
# Railway Redis - Plan gratuito: $5 crédito/mes
# REDIS_HOST=containers-us-west-123.railway.app
# REDIS_PORT=12345
# REDIS_PASSWORD=tu_railway_password

# Alternativa: Railway Redis
# REDIS_HOST=containers-us-west-123.railway.app
# REDIS_PORT=12345
# REDIS_PASSWORD=tu_railway_password

# ===========================================
# CONFIGURACIÓN DE CACHE
# ==========================================

# TTL (Time To Live) en segundos
CACHE_TTL_KPIS=300          # 5 minutos para KPIs
CACHE_TTL_FINANCIAL=600     # 10 minutos para KPIs financieros
CACHE_TTL_PRODUCTOS=1800    # 30 minutos para productos
CACHE_TTL_EMPRESA=3600      # 1 hora para datos de empresa

# ===========================================
# CONFIGURACIÓN DE FALLBACK
# ==========================================

# Si Redis falla, continuar sin cache
REDIS_FALLBACK_ENABLED=true

# Logs de cache para debugging
CACHE_DEBUG_ENABLED=false

# ===========================================
# MONITORING DE CACHE
# ==========================================

# Estadísticas de cache
CACHE_STATS_ENABLED=true

# Alertas de cache
CACHE_ALERTS_ENABLED=true 